#!/usr/bin/env node

const debug = require('debug')('meta-npm-clean');
const getMetaFile = require('get-meta-file');
const loop = require('loop');
const path = require('path');
const util = require('util');

const recursiveSearch = (obj, results = []) => {
  const r = results;
  Object.keys(obj).forEach(key => {
    const value = obj[key];
    if (typeof value !== 'object') {
      r.push(key);
    } else if (typeof value === 'object') {
      recursiveSearch(value, r);
    }
  });
  return r;
};

if (process.argv[2] === '--help') {
  return console.log(`\n  usage:\n\n    meta npm clean\n`);
}

const meta = getMetaFile();
const projects = recursiveSearch(meta.projects);
const folders = projects.map(folder => {
  return path.resolve(folder);
});

folders.unshift(process.cwd());

loop({
  command: 'rm -rf node_modules',
  directories: folders.reverse(),
});
