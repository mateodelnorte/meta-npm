#!/usr/bin/env node

const debug = require('debug')('meta-npm-install');
const fs = require('fs');
const metaLoop = require('meta-loop');
const path = require('path');

if (process.argv[2] === '--help') {
  return console.log(`\n  usage:\n\n    meta npm update\n`);
}

metaLoop('npm update', { test: (folder) => {
  return fs.existsSync(path.join(process.cwd(), folder, 'package.json')) === true;
}});